<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sciatta.openmall.dao.mapper.ext.OrderItemMapper">

    <select id="selectOrderItemByOrderId" resultMap="com.sciatta.openmall.dao.mapper.mbg.OrderItemMapper.BaseResultMap">
        select
        <include refid="com.sciatta.openmall.dao.mapper.mbg.OrderItemMapper.Base_Column_List"/>
        from order_items
        where order_id = #{orderId,jdbcType=VARCHAR}
    </select>

</mapper>